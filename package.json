{
  "name": "mindcode",
  "version": "0.1.0",
  "description": "AI-Native Code Editor - 基于 VSCode 架构的智能编程 IDE",
  "main": "dist/main/main/index.js",
  "author": "MindCode Team",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:main && concurrently -k \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/generative-ai": "^0.21.0",
    "@vscode/vscode-languagedetection": "^1.0.22",
    "electron-store": "^10.0.0",
    "keytar": "^7.9.0",
    "monaco-editor": "^0.52.0",
    "openai": "^4.70.0",
    "tiktoken": "^1.0.17"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.mindcode.app",
    "productName": "MindCode",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icons"
    }
  }
}

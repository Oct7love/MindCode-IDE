{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "rootDir": "src",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@core/*": ["src/core/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/main/**/*", "src/core/**/*", "src/shared/**/*", "src/types/**/*"],
  "exclude": ["src/renderer/**/*"]
}
